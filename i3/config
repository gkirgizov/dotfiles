# More(?) convenient resizing
set $size 5
bindsym $mod+Ctrl+Left resize shrink width $size px or $size ppt
bindsym $mod+Ctrl+Down resize shrink height $size px or $size ppt
bindsym $mod+Ctrl+Up resize grow height $size px or $size ppt
bindsym $mod+Ctrl+Right resize grow width $size px or $size ppt
bindsym $mod+Ctrl+h resize shrink width $size px or $size ppt
bindsym $mod+Ctrl+j resize shrink height $size px or $size ppt
bindsym $mod+Ctrl+k resize grow height $size px or $size ppt
bindsym $mod+Ctrl+l resize grow width $size px or $size ppt

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width $size px or $size ppt
        bindsym j resize shrink height $size px or $size ppt
        bindsym k resize grow height $size px or $size ppt
        bindsym l resize grow width $size px or $size ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $size px or $size ppt
        bindsym Down resize shrink height $size px or $size ppt
        bindsym Up resize grow height $size px or $size ppt
        bindsym Right resize grow width $size px or $size ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 3%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 3%- unmute
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle

